<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/gray_light"
    tools:context="cn.zhudai.zin.css.activity.PaymentActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_25"
        android:layout_marginLeft="@dimen/space_25"
        android:text="选择支付方式"
        android:gravity="center_vertical"
        android:textSize="@dimen/text_size_18"
        android:textColor="@color/black"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/space_25"
        android:paddingTop="@dimen/space_15"
        android:paddingBottom="@dimen/space_15"
        android:paddingRight="@dimen/space_25"
        android:background="@color/white">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/space_30"
            android:drawableLeft="@drawable/ic_wechat"
            android:textColor="@color/black"
            android:gravity="center_vertical"
            android:drawablePadding="10dp"
            android:textSize="@dimen/text_size_18"
            android:text="微信支付"
            />
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:checked="true"
            android:id="@+id/rb_wechat_pay"/>
    </RelativeLayout>
    <Button
        style="@style/item_sumit_button"
        android:layout_marginTop="@dimen/space_25"
        android:id="@+id/bt_pay"
        android:text="确认支付"/>
</LinearLayout>
