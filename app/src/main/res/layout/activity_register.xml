<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="cn.zhudai.zin.css.activity.RegisterActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_50"
        android:layout_marginLeft="@dimen/space_25"
        android:layout_marginRight="@dimen/space_25"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="工作城市"

            android:textColor="@color/black"
            android:textSize="@dimen/text_size_16"/>
        <EditText
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:id="@+id/et_city"
            android:editable="false"
            style="@style/item_input_edittext"
            android:drawableRight="@drawable/select_icon"/>



    </LinearLayout>
    <include layout="@layout/view_divider_gray_2dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_50"
        android:layout_marginLeft="@dimen/space_25"
        android:layout_marginRight="@dimen/space_25"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="姓 名"

            android:textColor="@color/black"
            android:textSize="@dimen/text_size_16"/>
        <EditText
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:id="@+id/et_name"
            style="@style/item_input_edittext"/>


    </LinearLayout>
    <include layout="@layout/view_divider_gray_2dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_50"
        android:layout_marginLeft="@dimen/space_25"
        android:layout_marginRight="@dimen/space_25"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="手机号码"

            android:textColor="@color/black"
            android:textSize="@dimen/text_size_16"/>
        <EditText
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            style="@style/item_input_edittext"
            android:id="@+id/et_phone"/>


    </LinearLayout>
    <include layout="@layout/view_divider_gray_2dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_50"
        android:layout_marginLeft="@dimen/space_25"
        android:layout_marginRight="@dimen/space_25"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="验证码"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_16"/>
        <EditText
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            style="@style/item_input_edittext"
            android:id="@+id/et_verification_code"/>
        <Button
            android:layout_width="100dp"
            android:layout_height="37dp"
            android:text="获取验证码"
            android:id="@+id/bt_get_vfcode"

            android:background="@drawable/bt_gray_selector"/>


    </LinearLayout>
    <include layout="@layout/view_divider_gray_2dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_50"
        android:layout_marginLeft="@dimen/space_25"
        android:layout_marginRight="@dimen/space_25"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="设置登录密码"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_16"/>
        <EditText
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            style="@style/item_input_edittext"
            android:inputType="textPassword"
            android:id="@+id/et_pwd"/>


    </LinearLayout>
    <include layout="@layout/view_divider_gray_2dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_50"
        android:layout_marginLeft="@dimen/space_25"
        android:layout_marginRight="@dimen/space_25"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="确认密码"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_16"/>
        <EditText
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            style="@style/item_input_edittext"
            android:inputType="textPassword"
            android:id="@+id/et_cfpwd"/>


    </LinearLayout>
    <include layout="@layout/view_divider_gray_2dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_50"
        android:layout_marginLeft="@dimen/space_25"
        android:layout_marginRight="@dimen/space_25"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <CheckBox
            android:id="@+id/rb_agree_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:button="@null"
            android:checked="true"
            android:drawableLeft="@drawable/cb_selector"
            android:drawablePadding="2dp"
            android:text=""/>
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text=""
            android:textColor="@color/black"
            android:id="@+id/tv_tip"
            android:clickable="true"
            android:layout_gravity="center"
            android:textSize="@dimen/text_size_16"/>



    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/space_35"
        android:layout_marginRight="@dimen/space_35"
        android:layout_marginTop="65dp"
        android:text="确  定"
        android:textColor="@color/white"
        android:id="@+id/bt_sumit"
        android:background="@drawable/bt_red_selector"

        android:textSize="@dimen/text_size_22"/>


</LinearLayout>
