<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context="cn.zhudai.zin.css.activity.IDCardActivity">
    <TextView
        android:id="@+id/tv_tip"
        style="@style/item_head_tipText"
        android:background="@color/gray_light"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="1">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="请上传身份证正面"
            android:textColor="@color/black"

            android:gravity="center"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/iv_IDimg_face"
            android:background="@drawable/ic_uplaod_default"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="1">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="请上传身份证反面"
            android:textColor="@color/black"

            android:gravity="center"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/iv_IDimg_back"
            android:background="@drawable/ic_uplaod_default"/>

    </LinearLayout>
    <Button
        style="@style/item_sumit_button"
        android:id="@+id/bt_next"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="40dp"
        android:text="下一步"/>
</LinearLayout>
